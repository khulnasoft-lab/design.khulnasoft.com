{
  "name": "design.gitlab.com",
  "version": "1.0.0",
  "description": "Resources, components, and design guidelines behind GitLab",
  "author": "GitLab",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/gitlab-org/gitlab-services/design.gitlab.com.git"
  },
  "bugs": {
    "url": "https://gitlab.com/gitlab-org/gitlab-services/design.gitlab.com/-/issues"
  },
  "scripts": {
    "start": "HOST=0.0.0.0 PORT=${PORT:=2018} nuxt",
    "buildsingle": "nuxt build",
    "build": "bash ./scripts/build.sh",
    "eslint": "eslint --ext .js,.mjs,.vue --ignore-path .gitignore .",
    "eslint:fix": "yarn run eslint --fix",
    "prettier": "prettier --list-different --ignore-path .gitignore '**/*.{js,vue}'",
    "prettier-all-save": "yarn run prettier --write",
    "markdown-lint": "bash ./scripts/markdown_lint.sh",
    "test": "bash ./scripts/test.sh",
    "test:unit": "jest",
    "lint:fix": "yarn run eslint:fix && yarn run prettier-all-save",
    "prepare": "if [[ ! \"$CI\" = \"true\" ]]; then yarn lefthook install; fi",
    "check-links": "start-server-and-test 'http-server ./public -c-1 --silent' 8080 'node ./scripts/check_links.mjs'",
    "precheck-links": "yarn build"
  },
  "engines": {
    "yarn": "^1.22.19"
  },
  "dependencies": {
    "@gitlab/application-sdk-browser": "^0.2.10",
    "@gitlab/fonts": "^1.3.0",
    "@gitlab/nuxt-edit-this-page": "1.0.0",
    "@gitlab/svgs": "3.69.0",
    "@gitlab/ui": "67.5.0",
    "@nuxt/content": "^1.15.1",
    "@nuxtjs/lunr-module": "^0.3.2",
    "@nuxtjs/sentry": "^8.0.1",
    "bootstrap": "^4.6.2",
    "iframe-resizer": "^4.3.7",
    "mermaid": "^10.6.0",
    "nuxt": "^2.17.2",
    "pikaday": "1.8.0"
  },
  "devDependencies": {
    "@babel/core": "7.23.2",
    "@babel/preset-env": "7.23.2",
    "@evilmartians/lefthook": "^1.5.2",
    "@gitlab/eslint-plugin": "19.2.0",
    "@vue/test-utils": "1.3.6",
    "@vue/vue2-jest": "^29.2.6",
    "babel-core": "^7.0.0-bridge.0",
    "eslint": "8.52.0",
    "http-server": "^14.1.1",
    "jest": "29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-serializer-vue": "^3.1.0",
    "linkinator": "^6.0.1",
    "prettier": "3.0.3",
    "sass": "^1.69.5",
    "sass-loader": "^10.4.1",
    "start-server-and-test": "^2.0.1",
    "vue-template-compiler": "2.7.15"
  },
  "resolutions": {
    "chokidar": "3.5.3",
    "sass-loader": "^10.4.1",
    "vue": "2.7.15",
    "vue-server-renderer": "2.7.15"
  },
  "release": {
    "branches": [
      "main"
    ],
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/gitlab"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/gitlab"
    ],
    "success": false,
    "fail": false
  },
  "jest": {
    "globals": {
      "vue-jest": {
        "templateCompiler": {
          "prettify": false
        }
      }
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|svg|css)$": "<rootDir>/tests/__mocks__/file_mock.js"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.vue$": "@vue/vue2-jest",
      ".*\\.(js)$": "babel-jest"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/test_setup.js"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!(@gitlab/ui|bootstrap-vue))"
    ],
    "testEnvironment": "jsdom"
  }
}
